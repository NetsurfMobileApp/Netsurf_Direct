    <style name="MyCheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/cl_grey_500</item>
        <item name="colorControlActivated">@color/cl_pink</item>
    </style>

    <style name="MySwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/primary</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/gray_text_color</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/gray_text_color</item>
    </style>



    <style name="SpinnerItem.DropDownItem" parent="@android:style/Widget.DropDownItem.Spinner">
        <item name="android:textColor">@color/black_text</item>
    </style>

    <style name="stockEditTextRectangle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:layout_weight">0.6</item>
        <item name="android:textColor">@color/cl_grey_800</item>
        <item name="android:textColorHint">@color/material_blue_grey_800</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
    </style>

    <style name="ThemeOverlay.AccentSecondary" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">#FFFFFF</item>
    </style>

    <style name="UpdateHostFragmentTitleText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>

    <style name="fragment_update_stock_item_editTextStyle" parent="stockEditTextRectangle">
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:clickable">false</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

