<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/drawer_list_height"
    xmlns:wheel="http://schemas.android.com/tools"
    android:id="@+id/rl1">


    <netsurf_app.netsurf_direct.widgets.TextViewFont
        android:id="@+id/txt_drawer_list_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/drawer_list_height"
        android:gravity="left|center_vertical"
        android:paddingLeft="@dimen/drawer_text_left_padding"
        android:text="cycle_comparison"
        android:textColor="@android:color/black"
        android:textSize="@dimen/secondary_text_size"
        app:font="@string/font_roboto_condensed_bold"
        />
    <netsurf_app.netsurf_direct.widgets.TextViewFont
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="25dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/circular_textview"
        android:gravity="center"
        android:visibility="gone"
        android:padding="8dp"
        android:text="25"
        android:textSize="@dimen/secondary_text_size"
        wheel:font="@string/font_roboto_condensed_bold"
        />


    <ImageView
        android:id="@+id/img_drawer_list_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:paddingRight="10dp"
        android:src="@drawable/ic_arrow_right"
        />


    <FrameLayout
        android:layout_width="@dimen/drawer_list_height"
        android:layout_height="@dimen/drawer_list_height"
        android:background="@drawable/shadow_drawer_image"
        android:padding="2dp"
        >

        <RelativeLayout
            android:id="@+id/rel_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/cycle_comparison"
            >

            <ImageView
                android:id="@+id/img_drawer_list_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_cycle_comparision"
                />
        </RelativeLayout>
    </FrameLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/drawer_divider_color"
        />

</RelativeLayout>